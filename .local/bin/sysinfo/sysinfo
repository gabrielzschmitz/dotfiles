#!/bin/sh
#         .             .              .		  
#         |             |              |           .	  
# ,-. ,-. |-. ,-. . ,-. |  ,_, ,-. ,-. |-. ,-,-. . |- ,_, 
# | | ,-| | | |   | |-' |   /  `-. |   | | | | | | |   /  
# `-| `-^ ^-' '   ' `-' `' '"' `-' `-' ' ' ' ' ' ' `' '"' 
#  ,|							  
#  `'							  
# GITHUB:https://github.com/gabrielzschmitz		  
# INSTAGRAM:https://www.instagram.com/gabrielz.schmitz/   
# DOTFILES:https://github.com/gabrielzschmitz/dotfiles/   

# System informations menu

# Options
uptime=" $(sysinfo-uptime)"
internet="$(sysinfo-internet)"
dates="$(sysinfo-date)"
memory="$(sysinfo-memory)"
weather="$(sysinfo-weather)"
packages="$(sysinfo-packages)"
disks="$(sysinfo-disks)"
cpu="$(sysinfo-cpu)"
battery="$(sysinfo-batteryicon)$(sysinfo-battery)"
manual="  Rice manual"

# Variables
options="$uptime\n$internet\n$dates\n$memory\n$weather\n$packages\n$disks\n$cpu\n$battery\n$manual"

# Choices
chosen="$(echo "$options" | dmenu)"
case $chosen in
    "$uptime")
	    	herbe " Uptime now:" "$(sysinfo-uptime)"
	;;
    "$internet")
	    	herbe " Network Manager:" &
                nmdmenu
        ;;
    "$dates")
	    	herbe " This month:" "$(sysinfo-calendar)"
        ;;
    "$memory")
	    	herbe " Most intences in memory:" "$(sysinfo-mostinmemory)"
        ;;
    "$weather")
	    	herbe " The weather today:" &
                setsid -f "st" -c weatherreport -e less -Srf "${XDG_DATA_HOME:-$HOME/.local/share}/weatherreport"
        ;;
    "$packages")
	    	herbe " Installed packages:" "$(sysinfo-packages)" &
                setsid -f "st" -c packagesupgrade -e sysinfo-packagesupgrade
        ;;
    "$disks")
	    	herbe " Disks:" "$(lsblk --output NAME,SIZE,TYPE)"
        ;;
    "$cpu")
	    	herbe " Most intences in CPU:" "$(sysinfo-mostincpu)"
        ;;
    "$battery")
	    	herbe "$(sysinfo-batteryicon) Battery now is:" "$(sysinfo-battery)"
        ;;
    "$manual")
	    	herbe " This is your manual to my rice!" &
                groff -mom $HOME/.local/share/dwm/gzdots.mom -T pdf | zathura -
esac

