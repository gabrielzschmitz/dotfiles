# Retrowave peaceful cash farm loop
sleep 5
case $1 in
    "--retrowaveup")
        while :
        do {
            sleep 0.001;
            xdotool key Up;
        }
        done
    ;;
    "--retrowaveclick")
        while :
        do {
            sleep 1;
            xdotool mousemove 770 903;
            xdotool click 1;
        }
        done
    ;;
esac

