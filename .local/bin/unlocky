#!/bin/sh
#         .             .              .
#         |             |              |           .
# ,-. ,-. |-. ,-. . ,-. |  ,_, ,-. ,-. |-. ,-,-. . |- ,_,
# | | ,-| | | |   | |-' |   /  `-. |   | | | | | | |   /
# `-| `-^ ^-' '   ' `-' `' '"' `-' `-' ' ' ' ' ' ' `' '"'
#  ,|
#  `'
# GITHUB:https://github.com/gabrielzschmitz
# INSTAGRAM:https://www.instagram.com/gabrielzschmitz_/
# DOTFILES:https://github.com/gabrielzschmitz/dotfiles/

# Auto lock script for slock
# by gabrielzschmitz (https://github.com/gabrielzschmitz)

toggle="$(pidof xautolock)"
status=$?

case $1 in
    "--silent")
        if [ $status = 1 ]
        then
            xautolock -time 10 -locker slock &
        else
            pkill xautolock
        fi
    ;;
    *)
        if [ $status = 1 ]
        then
            notify-send -t 2000 "  Running xautolock"
            xautolock -time 10 -locker slock &
        else
            pkill xautolock
            notify-send -t 2000 "  Killing xautolock"
        fi
    ;;
esac

