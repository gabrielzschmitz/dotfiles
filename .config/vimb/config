###BASICS###
# Home Page
set home-page=file:///home/gabrielzschmitz/Documents/My%20Homepage/myhomepage.html
# Download Path
set download-path=~/Downloads
# Cookies (accept all non-third-party cookies)	
set cookie-accept=origin
# User
set user-agent=Mozilla Chrome Safari AppleWebKit
set user-scripts=true
set webgl=true
# Smooth-Scrolling
set smooth-scrolling=true
# Hardware Acceleration
set hardware-acceleration-policy=always
# Dark Theme
set dark-mode=true
# Spell Checking
set spell-checking=true
set spell-checking-languages=pt_BR, en_US
# Searching
set incsearch=true
# Editor
set editor-command=alacritty -e nvim %s

### APPEARANCE ###
# Font
set default-font=FiraCode Nerd Font
set monospace-font=FiraCode Nerd Font Mono
set sans-serif-font=FiraCode Nerd Font
set serif-font=FiraCode Nerd Font
set font-size=12
set monospace-font-size=12
# Status Bar
set status-bar=true
set status-css=color:#9faab8;background-color:#1b1e26;font:12pt FiraCode Nerd Font;
set status-ssl-css=color:#9faab8;background-color:#3b8563;font:12pt FiraCode Nerd Font;
set status-ssl-invalid-css=color:#9faab8;background-color:#a65f69;font:12pt FiraCode Nerd Font;
# Input Box
set input-css=color:#9faab8;background-color:#3b8563;font:12pt FiraCode Nerd Font;
set input-error-css=color:#9faab8;background-color:#a65f69;font:12pt FiraCode Nerd Font;

### REMAPS ###
# Zoom Remap
nmap = zI
nmap - zO
nmap + zz
# Back and Forward Rebind
nnoremap <C-H> <C-O>
nnoremap <C-L> <C-I>
