    alias aliases='nvim $HOME/.config/zsh/aliases'                                    

#--------------------------- sys --------------------------------
                                                          alias	\
    ls='lsd --group-dirs first -A'				\
    l='lsd --group-dirs first -A'				\
    clear='clear ; zerofetch'					\
    cl='clear'							\
    pk='pkill'							\
    nv='nvim'							\
    mkins='doas make clean install'				\
    patcha='patch -p1 <'					\
    du='du --human-readable'					\
    grep='grep --color=auto'					\
    cmatrix='cmatrix -bC cyan'					\
    bat='bat --theme="base16" --style="numbers,changes"'	\
    cat='bat'							\
    sshserver='ssh gabrielzschmitz@192.168.0.122'		\

