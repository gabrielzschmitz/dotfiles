#--------------------------- sys --------------------------------
                                                          alias	\
    ls='lsd --group-dirs first -A --no-symlink'			\
    l='lsd --group-dirs first -A --no-symlink'			\
    lb='lsd -lA --group-dirs first --no-symlink                 \
    --blocks permission,name,size,date --date relative'         \
    cnt='lsd --group-dirs first -A | wc -l'			\
    cl='clear'                  			        \
    trrm='trash-put'						\
    pk='pkill'							\
    nv='nvim'							\
    vi='nvim'							\
    mkins='doas make clean install'				\
    patcha='patch -p1 <'					\
    du='du --human-readable'					\
    grep='grep --color=auto'					\
    cmatrix='cmatrix -bC cyan'					\
    bat='bat --theme="base16" --style="numbers,changes"'	\
    cat='bat'							\
    nnn='nnn -H'                                                \
    sshserver='ssh gabrielzschmitz@192.168.0.107'          	\

