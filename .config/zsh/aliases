#--------------------------- git --------------------------------
                                                          alias \
    alias dots='/usr/bin/git 					\
--git-dir=$HOME/doc/dotfiles --work-tree=$HOME'			\
    alias notes='/usr/bin/git					\
--git-dir=$HOME/doc/notes --work-tree=$HOME'			\
    								\
    dotsp='dots push -u origin main'				\
    dotsc='dots commit -m'					\
    dotsa='dots add'						\
    dotspl='dots pull'						\
    gitpu='git push -u origin main'				\
    gitc='dots commit -m'					\
    gita='git add'                                              \
    gitp='git push'                                             \
    gitpl='git pull'                                            \
    giti='git init'                                             \
    gits='git status'                                           \
    gitcl='git clone'						\
                                  
