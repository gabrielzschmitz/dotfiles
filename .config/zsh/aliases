#------------------------- youtube ------------------------------
                                                          alias \
    ym="youtube-dl --ignore-errors -f bestaudio  		\
      --extract-audio --audio-format mp3         		\
      --audio-quality 0 -o './%(title)s.%(ext)s'"		\
    yv="youtube-dl --ignore-errors -o            		\
      './%(title)s.%(ext)s'"					\
    musdl='cd $HOME/mus/down; youtube-dl -x			\
--audio-quality 0 --audio-format mp3 --embed-thumbnail'		\
    wavdl='cd $HOME/doc/mus; youtube-dl -x			\
--audio-quality 0 --audio-format wav --embed-thumbnail'		\
