# Aliases
alias lsd='lsd -hA --group-dirs first'
alias ls='lsd --group-dirs first'
alias grep='grep --color=auto'
alias bat='bat --theme="base16" --style="numbers,changes"'
alias cat='bat'
alias du='du --human-readable'
alias pcm='sudo pacman --color always'
alias paru='paru --color always --skipreview'
alias clear='clear ; sh $HOME/.scripts/quote.textart'
alias quote="sh $HOME/.scripts/quote.textart"
alias sshserver='ssh gabrielzschmitz@192.168.0.107'
alias cl='clear'
alias propvid='ffprobe -v error -show_entries stream=index,codec_name,codec_type'
alias cvrtsubmkv='for i in *.mkv; do ffmpeg -i "$i" -map 0:2 -c copy "${i%.*}.ass"; done'
alias cvrtsubmp4='for i in *.mp4; do ffmpeg -i "$i" -map 0:2 -c copy "${i%.*}.ass"; done'
alias cvrtvidmkv='for i in *.mkv; do ffmpeg -i "$i" -vcodec libx264 -crf 27 -preset veryfast "${i%.*}.mp4"; done'
alias cvrtvidmp4='for i in *.mp4; do ffmpeg -i "$i" -vcodec libx264 -crf 27 -preset veryfast "${i%.*}.mp4"; done'

alias br='setxkbmap br'
