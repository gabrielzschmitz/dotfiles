# DOTFILES:https://github.com/gabrielzschmitz/dotfiles/   
#!/bin/sh
xrdb $HOME/.config/X11/xresources &
kblayout &
/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
xbanish -i mod4 -i mod1 -i shift -i control &
mpd &
pulseaudio &
picom -b &
udiskie --file-manager=pcmanfm --terminal=st --notify --no-tray --automount &
dfltdisp &
dfltwall &
#sundialclk &
unlocky &
zerobar &
weatherdown &
mpv --no-vid --volume=75 /home/gabrielzschmitz/doc/startupsound.wav &
# NVIDIA
if [[ -f '/etc/X11/xorg.conf.d/999-zzz_custom_nv_multiscreen.conf' ]]; then
    # NOTE: verify provider names with command: `xrandr --listproviders`
    xrandr --setprovideroutputsource modesetting NVIDIA-G0

    xrandr --auto
    xrandr --dpi 96
fi
while type dwm >/dev/null ; do dwm && continue || break ; done

